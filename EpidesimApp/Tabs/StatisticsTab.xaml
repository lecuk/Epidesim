<UserControl x:Class="Epidesim.StatisticsTab"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Epidesim"
             xmlns:oxyWpf="http://oxyplot.org/wpf"
             xmlns:oxy="clr-namespace:OxyPlot;assembly=OxyPlot"
             xmlns:series="clr-namespace:OxyPlot.Series;assembly=OxyPlot"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" FontSize="14" Foreground="Black"
             Loaded="UserControl_Loaded" IsVisibleChanged="UserControl_IsVisibleChanged">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <oxyWpf:PlotView x:Name="CasesPerDayGraph" Grid.Row="0" Margin="5" />
        <oxyWpf:PlotView x:Name="TotalCasesGraph" Grid.Row="1" Margin="5" />
    </Grid>
</UserControl>
